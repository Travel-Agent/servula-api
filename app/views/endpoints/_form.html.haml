= form_for @endpoint do |f|
  - if @endpoint.errors.any?
    #error_explanation
      %h2= "#{pluralize(@endpoint.errors.count, "error")} prohibited this endpoint from being saved:"
      %ul
        - @endpoint.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :path
    = f.text_field :path
  .field
    = f.label :method
    = f.select :method, method_options_for_select(f.object.method)
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :parameters
    = f.text_area :parameters
  .field
    = f.label :example
    = f.text_area :example
  .actions
    = f.submit 'Save', class: 'button small radius'

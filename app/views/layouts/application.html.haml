/[if lt IE 7]
  %html{class: 'ie6', lang: 'en'}
/[if IE 7]
  %html{class: 'ie7', lang: 'en'}
/[if IE 8]
  %html{class: 'ie8', lang: 'en'}
/[if (gte IE 9)|!(IE)]
  :plain
    <!--><html lang="en"> <!--

%head
  %meta{charset: 'utf-8'}
  %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
  %title= content_for?(:title) ? yield(:title) : "Untitled"

  = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Kelly+Slab|Gudea'
  = stylesheet_link_tag 'application'
  =# javascript_include_tag 'vendor/custom.modernizr'
  = csrf_meta_tags

%body
  %header.row
    %h1
      = link_to image_tag('https://my.servula.com/assets/header/logo-beta.png'), root_url
      = link_to 'dev.servula.com', root_url

  .row#main
    %aside.columns.small-3
      = render 'layouts/sidebar'
    .columns.small-9
      = yield


  %footer.row
    .columns.small-12
      &copy; Servula

  = javascript_include_tag "application"
